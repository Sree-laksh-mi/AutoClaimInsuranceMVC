@model AutoClaimInsuranceMVC.Models.RegisteredUser

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <link href="~/Content/Site.css" rel="stylesheet" />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    <div class="form-row card col-6 mt-4 mr-4 p-3">
        <div class="card-header mt-0 mb-0 pt-0 pb-0">
            <h4 class="heading">Sign UP</h4>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-row">
                @Html.LabelFor(model => model.insurerId)
                <div class="col-md-5 offset-md-4">
                    @Html.EditorFor(model => model.insurerId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.insurerId, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-row">
                @Html.LabelFor(model => model.userId)
                <div class="col-md-5 offset-md-4">
                    @Html.EditorFor(model => model.userId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userId, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-row">
                @Html.LabelFor(model => model.password)
                <div class="ml-5">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-row">
                @Html.LabelFor(model => model.confirmPassword)
                <div class="ml-5">
                    @Html.EditorFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.confirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-row">
                <div class="text-lg-left col-md-10">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
}

