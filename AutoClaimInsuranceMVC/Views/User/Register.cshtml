@model AutoClaimInsuranceMVC.Models.RegisteredUser

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    

    <link href="~/Content/Site.css" rel="stylesheet" />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6 py-4 form border border-dark">
                <h2 class="text-center">Sign Up</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row px-3">
                    <label class="col-4"> Insurer ID</label>
                    @Html.EditorFor(model => model.insurerId, new { htmlAttributes = new { @class = "col form-control" } })
                    @Html.ValidationMessageFor(model => model.insurerId, "", new { @class = "text-danger" })
                </div>
            
                <div class="form-group row px-3">
                    <label class="col-4"> Mail ID</label>
                    @Html.EditorFor(model => model.userId, new { htmlAttributes = new { @class = "col form-control" } })
                    @Html.ValidationMessageFor(model => model.userId, "", new { @class = "text-danger" })
                </div>
               
                <div class="form-group row px-3">
                    <label class="col-4"> Password</label>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control col" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group row px-3">
                    <label class="col-4"> Confirm Password</label>
                    @Html.EditorFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "col form-control" } })
                    @Html.ValidationMessageFor(model => model.confirmPassword, "", new { @class = "text-danger" })
                </div>
            
                <div class="form-group mt-5 text-center">
                    <input type="submit" value="SIGN UP" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")}

