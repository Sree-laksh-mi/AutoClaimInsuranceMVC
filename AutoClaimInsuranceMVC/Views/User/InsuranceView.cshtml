@model IEnumerable<AutoClaimInsuranceMVC.Models.Insurance>

@{
    ViewBag.Title = "InsuranceView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-primary" style="font-family:Algerian">Insurance</h2>
<table class="table table-striped">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.insurer.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.coverage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.endDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vehilceRegistrationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.chassisNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valueInsured)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.insurer.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.coverage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vehilceRegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.chassisNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valueInsured)
            </td>
            <td>
              <div class="text-info">  @Html.ActionLink("Claim", "Claim", new { policyNumber = item.policyNumber })</div>
            </td>
        </tr>
    }

</table>
