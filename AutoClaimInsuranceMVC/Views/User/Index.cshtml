@model AutoClaimInsuranceMVC.Models.RegisteredUser

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .btn{
        height:40px;
        width:70px;
        font-size:medium;
    }
</style>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <br />
    <br /><br />
    <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6 py-4 form border border-dark">
                    <h2 class="text-center text-primary" style="font-family:Algerian">LOGIN</h2>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row px-3"style="font-size:medium;font-family:'Book Antiqua'">
                        <label class="col-4"> Email ID</label>
                        @Html.EditorFor(model => model.userId, new { htmlAttributes = new { @class = "col form-control" } })
                        @Html.ValidationMessageFor(model => model.userId, "", new { @class = "text-danger" })
                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row px-3"style="font-size:medium;font-family:'Book Antiqua'">
                        <label class="col-4"> Password</label>
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "col form-control" } })
                       
                    </div>

                    <div class="form-group mt-5 text-center">
                        <input type="submit" value="LOGIN" class="btn btn-info" />
                    </div>
                </div>
                </div>
            </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
