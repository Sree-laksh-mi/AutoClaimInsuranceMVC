@model IEnumerable<AutoClaimInsuranceMVC.Models.Claim>

@{
    ViewBag.Title = "ClaimProgress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ClaimProgress</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.insurer.firstName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.policyNumber)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.claimDate)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.insurer.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.policyNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.claimDate)
        </td>
        <td>
           
            @Html.ActionLink("Details", "ClaimDetails", new { claimId=item.claimId ,style="color:blue"  }) 
           
        </td>
    </tr>
}

</table>
