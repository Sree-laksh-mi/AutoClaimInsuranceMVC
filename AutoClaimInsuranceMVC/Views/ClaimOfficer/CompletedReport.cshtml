@model IEnumerable<AutoClaimInsuranceMVC.Models.Report>

@{
    ViewBag.Title = "CompletedReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CompletedReport</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.claim.insurerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reportDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.claim.insurerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reportDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @Html.ActionLink("Accept", "AcceptClaim", new { claimid=item.claimId,reportId=item.reportId}) 
            @Html.ActionLink("Reject", "RejectClaim", new { claimid = item.claimId, reportId = item.reportId }) |
        </td>
    </tr>
}

</table>
