@model IEnumerable<AutoClaimInsuranceMVC.Models.Report>

@{
    ViewBag.Title = "CompletedReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center text-primary" style="font-family:Algerian">Completed Report</h2>



<table class="table table-striped">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.claim.insurerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reportDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.claim.insurerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reportDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @Html.ActionLink("Accept", "AcceptClaim", new { claimid=item.claimId,reportId=item.reportId,style="color:blue"}) |
            @Html.ActionLink("Reject", "RejectClaim", new { claimid = item.claimId, reportId = item.reportId ,style="color:blue"}) 
        </td>
    </tr>
}

</table>
