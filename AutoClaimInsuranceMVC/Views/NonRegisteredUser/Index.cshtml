@model AutoClaimInsuranceMVC.Models.Claim

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h4 >Claim</h4>*@


@using (Html.BeginForm("Index", "NonRegisteredUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    
    <h4 class="heading ">Claim</h4>
    <hr />
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-row">
        @Html.LabelFor(model => model.insurerId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(model => model.insurerId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.insurerId, "", new { @class = "text-danger" })
            <br/>
        </div>
        
    </div>

    <div class="form-row">
        @Html.LabelFor(model => model.MailID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(model => model.MailID, new { htmlAttributes = new { @class = "form-control" } })
           @Html.ValidationMessageFor(model => model.MailID, "", new { @class = "text-danger" })
            <br/>
        </div>
        
    </div>

    <div class="form-row">
        @Html.LabelFor(model => model.policyNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div >
            @Html.EditorFor(model => model.policyNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.policyNumber, "", new { @class = "text-danger" })
            <br/>
        </div>
    </div>

    <div class="form-row">
        @Html.LabelFor(model => model.dateAndTime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div >
            @Html.EditorFor(model => model.dateAndTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.dateAndTime, "", new { @class = "text-danger" })
            <br/>
        </div>
    </div>

    <div class="form-row">
        @Html.LabelFor(model => model.policeCase, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            <h7>Yes</h7>@Html.RadioButtonFor(m => m.policeCase, "Yes", new { htmlAttributes = new { @class = "policscase" } })
            &nbsp;&nbsp; <h7>No</h7>@Html.RadioButtonFor(m => m.policeCase, "No", new { htmlAttributes = new { @class = "policscase" } })

            @Html.ValidationMessageFor(model => model.policeCase, "", new { @class = "text-danger" })
            <br />
            <br /><br/>
        </div>
        
        
    </div>


    <div class="form-row">
        @Html.LabelFor(model => model.reason, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.DropDownList("reason", new List<SelectListItem>
           { new SelectListItem { Text = "Accident", Value = "Accident", Selected=true},
             new SelectListItem { Text = "Manufacturing Defect", Value = "Manufacturing Defect"},
             new SelectListItem { Text = "Natural calamity", Value = "Natural Calamity"},
             new SelectListItem { Text = "Theft", Value = "Theft"}
           })
            <br />
            <br />
            <br/>
        </div>
     </div>
    
    <div class="form-row">
        @Html.LabelFor(model => model.licenseCopy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
        @Html.TextBox("fileLicense", "", new { type = "file" }) <br />
        @ViewBag.Message
           <br/>
            <br/>
        </div>
        
    </div>

    <div class="form-row">
        @Html.LabelFor(model => model.rcCopy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
        @Html.TextBox("fileRc", "", new { type = "file" }) <br />
        @ViewBag.Message_two
            <br/>
         </div>
        
    </div>




    <div class="form-group">
        @*<div class="col-md-offset-2 col-md-10">*@
        <div class="text-lg-left col-md-12">
            <input type="submit" value="Create" class="btn btn-info" />
        </div>
    </div>
</div>
}

@*<div>
    @Html.ActionLink("Back to Home", "HomePage", "User")
</div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
